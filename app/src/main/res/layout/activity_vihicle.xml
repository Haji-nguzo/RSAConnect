<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VihicleActivity"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Vehicle Details"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Enter Car Details"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/txtDetail"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/parentCard">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/car"
                android:background="@color/Red"
                android:id="@+id/car"/>

            <TextView
                android:id="@+id/txtDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/car"
                android:text="Haji Selemani"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCompany"
                android:text="Toyota   |"
                android:textColor="@color/black"
                android:layout_below="@+id/txtDriverName"
                android:layout_toEndOf="@+id/car"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txtModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDriverName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/txtCompany"
                android:text="Fortuner   |"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDriverName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/txtModel"
                android:text="Petrol"
                android:textColor="@color/black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Company"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/txtCom"
        android:layout_below="@+id/parentCard"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtCompany"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtCom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:textColor="@color/black"
        android:hint="Eg. BMW"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Model"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/txtBrand"
        android:layout_below="@+id/edtCompany"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtBrand"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:textColor="@color/black"
        android:hint="Eg. X6M"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plate Number"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/txtPlateNo"
        android:layout_below="@+id/edtModel"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtPlateNo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPlateNo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:textColor="@color/black"
        android:hint="Eg. T 123 EAB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/txtFuels"
        android:layout_below="@+id/edtPlateNo"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtFuels"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtFuels"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:textColor="@color/black"
        android:hint="Eg. Petrol"/>
    <Button
        android:id="@+id/btnConfirmCarDetail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="continue"
        android:textSize="20sp" />



</RelativeLayout>