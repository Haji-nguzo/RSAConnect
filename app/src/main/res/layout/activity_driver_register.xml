<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverRegisterActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/registr"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:text="Register"
        android:layout_below="@+id/imageView"
        android:textSize="24sp"
        android:textColor="@color/Red"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get Started"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_below="@+id/textView"
        android:layout_marginStart="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:textColor="@color/black"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:text="Full Name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtDriverName"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Eg. Haji Selemani"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/edtDriverName"
        android:text="Email"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtDriverEmail"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="haji@gmail.com"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/edtDriverEmail"
        android:text="Phone Number"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPhoneNo"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="07XXXXXXXX"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtPhoneNo"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:id="@+id/btnRegister"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/black"
        android:id="@+id/txthaveaccount"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSignIn"
        android:text="Sign In"
        android:textColor="@color/Red"
        android:layout_toEndOf="@+id/txthaveaccount"
        android:layout_below="@id/btnRegister"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>


</RelativeLayout>